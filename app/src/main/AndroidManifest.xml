<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ymourino.pmdm02">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EnviarPedidoActivity"
            android:label="Información para el envío" />
        <activity
            android:name=".HacerPedidoActivity"
            android:label="Hacer un nuevo pedido" />
        <activity
            android:name=".PedidosTramiteActivity"
            android:label="Ver pedidos en trámite" />
        <activity
            android:name=".ComprasRealizadasActivity"
            android:label="Ver compras realizadas" />
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>